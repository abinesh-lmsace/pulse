    {
        "sitefullname": "Moodle - 311",
		"courseurl": "https://localhost/moodle/course/view.php?id=2"
    }
}}

<div class="course-notification-block">
	<div class="container">
		<div class="course-info-block">
			<div class="logo-block">
				<a href="#">{{sitefullname}}</a>
			</div>

