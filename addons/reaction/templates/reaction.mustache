				<p>{{#str}}reactionthankmsg, mod_pulse{{/str}}</p>

				<div class="btn-block">
					<a href="{{courseurl}}" class="btn btn-primary">{{#str}}logintocourse, mod_pulse{{/str}}</a>
				</div>
			</div>
		</div>
	</div>
