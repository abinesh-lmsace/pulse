{{!
    @template pulseaddon_reaction/Rate reaction template.

    Example context (json):
    {
        "reactionurl_dislike" : "http://moodleurl/mod/pulse/addons/reaction/reaction.php?rate=1"
    }
}}
<div class="rate-reaction">
    <br>
    <div>
        <a href="{{{reactionurl_like}}}"
            style="padding: 10px; color: #fff; background-color: #357a32; text-decoration-line: none;" >
            {{#pix}} thumbsup, pulseaddon_reaction, Like {{/pix}}
            <span style="display: inline-block;padding: 0 !important;">
                {{#str}} like, pulse {{/str}}
            </span>
        </a>
    </div>
    <br>
    <div>
        <a href="{{{reactionurl_dislike}}}"
            style="padding: 10px; color: #fff; background-color: #ca3120; text-decoration-line: none;" >
            {{#pix}} thumbsdown, pulseaddon_reaction, Dislike {{/pix}}
            <span style="display: inline-block; padding: 0 !important;">
                {{#str}} dislike, pulse {{/str}}
            </span>
        </a>
    </div>
    <br>
</div>
